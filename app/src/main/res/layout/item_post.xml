<?xml version="1.0" encoding="utf-8"?><!-- A CardView that contains a TextView -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="#fff"
    android:padding="8dp"
    card_view:cardCornerRadius="4dp"
    >

  <RelativeLayout
      android:id="@+id/recyclerViewItem"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:orientation="vertical"
      android:padding="16dp">

    <ImageView
        android:id="@+id/imageMovie"
        android:layout_width="130dp"
        android:layout_height="170dp"
        android:scaleType="centerCrop"
        android:src="@drawable/error_image" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/imageMovie"
        android:textColor="@android:color/black"
        tools:text="Время возмездия"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/imageMovie" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_gravity="start"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/imageMovie"
        android:textColor="@android:color/black"
        tools:text="Эрин, внедрённая в преступную банду, влюбляется в своего напарника. Однако тщательно подготовленная спецоперация неожиданно идёт не по плану. Спустя несколько лет прошлое вновь настигнет девушку, но уже сильную и безжалостную. Грядёт время возмездия… Запись от 2019-10-13 телеканал ПРЕМЬЕРА"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/imageMovie" />

    <TextView
        android:id="@+id/countries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description"
        android:layout_marginTop="5dp"
        tools:text="Countries" />

    <TextView
        android:id="@+id/actors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/countries"
        android:layout_marginTop="5dp"
        tools:text="Actors" />

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actors"
        android:layout_marginTop="5dp"
        tools:text="Duration" />


    <TextView
        android:id="@+id/genres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/duration"
        android:layout_marginTop="5dp"
        tools:text="Genres" />

    <TextView
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/genres"
        android:layout_marginTop="5dp"
        tools:text="Year" />

    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/year"
        android:layout_marginTop="5dp"
        tools:text="Age" />

    <TextView
        android:id="@+id/added"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/age"
        android:layout_marginTop="5dp"
        tools:text="Added" />

    <TextView
        android:id="@+id/created"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/age"
        android:layout_marginStart="150dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/added"
        tools:text="Created"
        android:layout_marginLeft="150dp"
        android:layout_toRightOf="@+id/added" />

  </RelativeLayout>
</androidx.cardview.widget.CardView>